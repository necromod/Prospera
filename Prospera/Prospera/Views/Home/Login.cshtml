@model Prospera.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link css -->
    <link rel="stylesheet" href="/wwwroot/css/site.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">

    <title>Document</title>
</head>

<body>
    <!-- Session NavBar -->
    <section id="NavBar">
        <div class="MenuNav">
            <ul class="Nav-Container">
                <img src="/ProsperaModel/img/Login/IconeLogin.png">
                <h2>PROSPERA</h2>
                <a asp-controller="Home" asp-action="Index" id="BtnInicio" class="btn btn-primary">INICIO</a>
                <li><a href="#" id="BtnInicio">INICIO</a></li>
            </ul>
        </div>
    </section>

    <div class="div-central container">
        <img src="/img/Login/LoginBanner.png" alt="">

        <div class="CardInfLogin">
            <div class="LoginInf">
                <h2>Olá <br> Seja bem vindo</h2>

                <form method="post" asp-action="Login" asp-controller="Usuario">
                    <div class="TxtLogin">
                        @Html.TextBoxFor(model => model.EmailUsuario, new { @class = "form-control", placeholder = "Login" })
                    </div>

                    <div class="IconSenha">
                        <!-- Seu ícone para senha aqui -->
                    </div>

                    <div class="TxtSenha">
                        @Html.PasswordFor(model => model.SenhaUsuario, new { @class = "form-control", placeholder = "Senha" })
                    </div>

                    <!-- Exibir a mensagem personalizada acima do campo Login -->
                    @if (ViewBag.ErrorMessage == "Email")
                    {
                        <div class="ErrorMessage">Email não cadastrado. Verifique seu email.</div>
                    }

                    <!-- Exibir a mensagem personalizada acima do campo Senha -->
                    @if (ViewBag.ErrorMessage == "Senha")
                    {
                        <div class="ErrorMessage">Senha incorreta. Tente novamente.</div>
                    }

                    <h4 class="CheckH4">
                        <input type="checkbox" name="ManterLogado" id="ChekManterLogado"> Manter logado?
                    </h4>

                    <div id="BtnLogin">
                        <button type="submit" class="btn btn-primary">Logar</button>
                    </div>

                </form>

                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }

                <!-- Se houver erros de validação, exiba-os -->
                @Html.ValidationSummary()

                <!-- Btxt - Botão que na verdade esta dentro de um texto, h1 ou p... -->
                <h4 class="BtxtInscrevase">Não tem conta? <a href="#" id="BtnInscrevase">Inscreva-se</a></h4>

                <h4 class="BtxtEsqSenha"><a href="#" id="BtnAjuda">Ajuda</a> <a href="#" id="BtnEsqSenha">Esqueceu a senha?</a></h4>

            </div>
        </div>
    </div>

    <!-- link js -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
