@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}



<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link css -->
    <link rel="stylesheet" href="/wwwroot/css/site.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">

          <style>
        .LoginSpac {
            margin-top: 30px;
        }

          </style>

    <title>Document</title>
</head>

<body>
    <!-- Session NavBar -->
    <section id="NavBar">
        <div class="MenuNav">
            <ul class="Nav-Container">
                <img src="/ProsperaModel/img/Login/IconeLogin.png">
                <h2>PROSPERA</h2>
                <li><a asp-controller="Home" asp-action="Index" id="BtnInicio">INICIO</a></li>
            </ul>
        </div>
    </section>

    <div class="div-central container">
        <img src="/img/Login/LoginBanner.png" alt="">

        <div class="CardInfLogin">
            <h2>Olá <br> Seja bem vindo</h2>
            <div class="LoginInf LoginSpac">

                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                        @TempData["MensagemErro"]
                    </div>
                }
                <form asp-controller="Login" asp-action="Entrar" method="post">
                    <div class="mb-3 ">
                        <label for="Email" class="form-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control " id="login">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="mb-3 ">
                        <label for="Senha" class="form-label SenhaSpace">Senha</label>
                        <input type="password" asp-for="Senha" class="form-control" id="senha">
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>



                <!-- Btxt - Botão que na verdade esta dentro de um texto, h1 ou p... -->
                <h4 class="BtxtInscrevase">Não tem conta? <a asp-controller="Cadastro" asp-action="Cadastro" id="BtnInscrevase">Inscreva-se</a></h4>

                <h4 class="BtxtEsqSenha"><a href="#" id="BtnAjuda">Ajuda</a> <a href="#" id="BtnEsqSenha">Esqueceu a senha?</a></h4>

            </div>
        </div>
    </div>

    <!-- link js -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
