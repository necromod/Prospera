@model Prospera.Helpers.TerceirosViewModel;
@{
    ViewData["Title"] = "Terceiros";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Evita que o usuario rotacione a tela ou aproxime para ver as informaçoes -->
    <meta name="viewport" content="width=device-width">
    <!-- link css -->
    <link rel="stylesheet" href="/css/PaginaInicial.css">
    <!-- Css Pagina Axiliares -->
    <!-- Receitas css -->
    <link rel="stylesheet" href="/css/PaginaMenus/Receitas.css">
    <!-- DespesasCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Despesas.css">
    <!-- ContaBancariaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ContaBancaria.css">
    <!-- TerceirosCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Terceiros.css">
    <!-- TerceirosConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ConsultaTerceiros.css">
    <!-- TransacaoConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Transacao.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="icon" href="/img/Favicon.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">

    <title>Prospera</title>
</head>

<body>
    <!-- Region Menu Despesas-->
    <ul id="FundoMenusDespesa">
        <ul class="Container DespesasContainer">
            <li class="HeadMenuDespesas">
                <h4>Cadastro de Despesas</h4>
            </li>
            <li class="TxtInfDespesas">
                <span>
                    <h4>Nome</h4>
                    <h4>Observação</h4>
                    <h4>Valor</h4>
                    <h4>Data de Vencimento</h4>
                    <h4>Pessoa</h4>
                    <h4 class="NomID">ID</h4>
                </span>
                <input type="text" id="TxtDespesasNome" maxlength="30">
                <input type="text" id="TxtDespesasObservacao" maxlength="100">
                <input type="text" id="TxtDespesasValor">
                <input type="text" id="TxtDespesasData">
                <input type="text" id="TxtDespesasBuscaId" maxlength="3">
                <button id="BtnDespesasCadastrar">Cadastrar</button>
                <button id="BtnDespesasVoltar">Voltar</button>
                <button id="BtnDespesasLimpar">Limpar</button>
                <button id="BtnDespesasApagar">Excluir</button>
                <button id="BtnDespesasAlterar">Alterar</button>
                <button id="BtnDespesasConsultar">Buscar</button>
            </li>
            <li>
            <li id="DespesasVoltar"><a href="#">Voltar</a></li>
            <li class="DropContainerDespesas">
                <select id="DespesasDropPessoaDespesas">
                    <option value=""></option>
                    <option value="Marcos">Vermelho</option>
                    <option value="Vitor">Azul</option>
                    <option value="Jonas">Verde</option>
                    <option value="Marcio">Amarelo</option>
                    <option value="Vitor">Roxo</option>
                </select>

            </li>
        </ul>
    </ul>

    <!-- FIM Region Menu Despesas-->

    <script src="/js/PaginaInicial.js" asp-append-version="true"></script>
</body>

</html>