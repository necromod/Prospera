                    <input type="text" id="TxtReceitasBuscaId" maxlength="3">
                    <button id="BtnReceitasCadastrar">Cadastrar</button>
                    <button id="BtnReceitasVoltar">Voltar</button>
                    <button id="BtnReceitasLimpar">Limpar</button>
                    <button id="BtnReceitasApagar">Excluir</button>
