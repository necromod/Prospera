{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "ProsperaConfigurationResourceGroup",
      "metadata": {
        "_parameterType": "resourceGroup",
        "description": "Nome do grupo de recursos do recurso. É recomendável colocar os recursos no mesmo grupo de recursos para melhor acompanhamento."
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "australiacentral",
      "metadata": {
        "_parameterType": "location",
        "description": "Local do grupo de recursos. Os grupos de recursos podem ter um local diferente do local dos recursos."
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[parameters('resourceGroupLocation')]",
      "metadata": {
        "_parameterType": "location",
        "description": "Local do recurso. Por padrão, use o local do grupo de recursos, a menos que não haja suporte para o provedor de recursos."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "apiVersion": "2019-10-01"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('resourceGroupName'), 'Deployment', uniqueString(concat('ProsperaConfiguration', subscription().subscriptionId)))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[parameters('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.AppConfiguration/configurationStores",
              "location": "[parameters('resourceLocation')]",
              "properties": {},
              "sku": {
                "name": "free"
              },
              "systemData": {
                "createdBy": "edimilson.silva@gpnet.com.br",
                "createdByType": "User",
                "createdAt": "2025-11-13T08:37:25-03:00",
                "lastModifiedBy": "edimilson.silva@gpnet.com.br",
                "lastModifiedByType": "User",
                "lastModifiedAt": "2025-11-13T08:37:25-03:00"
              },
              "name": "ProsperaConfiguration",
              "apiVersion": "2022-05-01"
            }
          ]
        }
      }
    }
  ],
  "metadata": {
    "_dependencyType": "appConfig.azure"
  }
}