@model List<Prospera.Models.Contas>

@{
    ViewData["Title"] = "Terceiros";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Evita que o usuario rotacione a tela ou aproxime para ver as informaçoes -->
    <meta name="viewport" content="width=device-width">
    <!-- link css -->
    <link rel="stylesheet" href="/css/PaginaInicial.css">
    <!-- Css Pagina Axiliares -->
    <!-- Receitas css -->
    <link rel="stylesheet" href="/css/PaginaMenus/Receitas.css">
    <!-- DespesasCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Despesas.css">
    <!-- ContaBancariaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ContaBancaria.css">
    <!-- TerceirosCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Terceiros.css">
    <!-- TerceirosConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ConsultaTerceiros.css">
    <!-- TransacaoConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Transacao.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="icon" href="/img/Favicon.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">

    <title>Prospera</title>
</head>

<body>
    <!-- Region Transações -->
    <ul id="FundoMenusTransacaoConsult">
        <ul class="Container TerceirosContainerTransacao" style="overflow-y: auto;">
            <li class="HeadMenuTerceirosTransacao">
            </li>
            <li class="TxtInfTerceirosTransacao">
            <li class="HeadTransacaoContainer">
                <h4 class="TransacaoHead1">Nome</h4>
                <h4 class="TransacaoHead2">Valor</h4>
                <h4 class="TransacaoHead3">Pessoa</h4>
                <h4 class="TransacaoHead4">Observação</h4>
                <h4 class="TransacaoHead5">Data da Movimentação</h4>
                <h4 class="TransacaoHead6">Status</h4>
                <h4 class="TransacaoHead7">Tipo de Movimentação</h4>
            </li>

            </span>
                @foreach (var conta in Model)
                {
                <br class="espacotop" />
                <li class="TtxTransacaoContainer">
                    <input type="text" id="TxtTransacaoNomeConsult" value="@conta.NomeCont" maxlength="30">
                    <input type="text" id="TxtTransacaoValorfoneConsult" value="@conta.ValorCont" maxlength="100">
                    <input type="text" id="TxtTransacaoPessoaConsult" value="@conta.PessoaCont">
                    <input type="text" id="TxtTransacaoObservacaoConsult" value="@conta.ObservacaoCont">
                    <input type="text" id="TxtTransacaoDatMovConsult" value="@conta.DatEmissaoCont" >
                    <input type="text" id="TxtTransacaoStatusConsult" value="@conta.StatusCont">
                    <input type="text" id="TxtTransacaoTpMovConsult" value="@conta.PagarReceberCont" >
                    <input type="text" id="TxtTransacaoID" value="@conta.CodigoCont">
                    <input type="text" id="" value="@conta.DatVenciCont">
                    <input type="text" id="" value="@conta.MetodoPgtoCont">
                </li>

            }
            <button id="BtnTransacaoVoltarConsult"><a asp-controller="Home" asp-action="MenuUsuario">Voltar</a></button>

            </li>
            <li>


                <!-- Conteúdo da tela oculta aqui -->

            </li>
        </ul>
    </ul>
    <!-- FIM Transacoes -->

    <script src="/js/PaginaInicial.js" asp-append-version="true"></script>
</body>

</html>