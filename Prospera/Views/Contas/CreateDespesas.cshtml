@model Prospera.Models.Contas;

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Evita que o usuario rotacione a tela ou aproxime para ver as informaçoes -->
    <meta name="viewport" content="width=device-width">
    <!-- link css -->
    <link rel="stylesheet" href="/css/PaginaInicial.css">
    <!-- Css Pagina Axiliares -->
    <!-- Receitas css -->
    <link rel="stylesheet" href="/css/PaginaMenus/Receitas.css">
    <!-- DespesasCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Despesas.css">
    <!-- ContaBancariaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ContaBancaria.css">
    <!-- TerceirosCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Terceiros.css">
    <!-- TerceirosConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ConsultaTerceiros.css">
    <!-- TransacaoConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Transacao.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="icon" href="/img/Favicon.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">

    <title>Prospera</title>
</head>

<body>
    <!-- Region Menu Despesas-->
    <ul id="FundoMenusDespesa">
        <ul class="Container DespesasContainer">
            <li class="HeadMenuDespesas">
                <h4>Cadastro de Despesas</h4>
            </li>
            <li class="TxtInfDespesas">
                <span>
                    <h4>Nome</h4>
                    <h4>Observação</h4>
                    <h4>Valor</h4>
                    <h4>Data de Vencimento</h4>
                    <h4>Pessoa</h4>
                    <h4>Forma de pagamento</h4>
                    <h4>Status</h4>
                    <h4 class="NomID">ID</h4>
                </span>
                <form asp-controller="Contas" asp-action="CadastrarDespesa" method="post" id="DespesaForm">
                    <input type="text" asp-for="NomeCont" placeholder="Nome despesa" id="TxtDespesasNome" maxlength="30">
                    <span asp-validation-for="NomeCont" class="text-danger"></span>
                    <input type="text" asp-for="ObservacaoCont" placeholder="Observação" id="TxtDespesasObservacao" maxlength="100">
                    <span asp-validation-for="ObservacaoCont" class="text-danger"></span>
                    <input type="text" asp-for="ValorCont" placeholder="Valor " id="TxtDespesasValor">
                    <span asp-validation-for="ValorCont" class="text-danger"></span>
                    <input type="text" asp-for="DatVenciCont" placeholder="Data Vencimento" id="TxtDespesasData">
                    <span asp-validation-for="DatVenciCont" class="text-danger"></span>
                    <input type="Text" asp-for="MetodoPgtoCont" placeholder="Forma de pagamento" id="MetodoPgtoCont" />
                    <span asp-validation-for="MetodoPgtoCont" class="text-danger"></span>
                    <input type="text" asp-for="StatusCont" placeholder="Pago/Pendente" id="StatusCont" />
                    <span asp-validation-for="StatusCont" class="text-danger"></span>
                    <input type="Text" asp-for="RecebedorCont" placeholder="Destino" id="DespesasDropPessoaDespesas" />
                    <span asp-validation-for="RecebedorCont" class="text-danger"></span>
                    <input type="text" asp-for="CodigoCont" placeholder="Código da conta" id="TxtDespesasBuscaId" maxlength="3">
                    <span asp-validation-for="CodigoCont" class="text-danger"></span>
                    <input type="hidden" name="acao" id="acao" value="cadastro" />

                    <button type="submit" name="btnAcao" value="Cadastro" id="BtnDespesasCadastrar">Cadastrar</button>
                    <button type="submit" name="btnAcao" value="Excluir" id="BtnDespesasApagar">Excluir</button>
                    <button type="submit" name="btnAcao" value="Alterar" id="BtnDespesasAlterar">Alterar</button>
                </form>


                <button id="BtnDespesasVoltar"><a asp-controller="Home" asp-action="MenuUsuario">Voltar</a></button>
                <button id="BtnDespesasLimpar">Limpar</button>
                <button id="BtnDespesasConsultar">Buscar</button>
            </li>
            <li>
            <li id="DespesasVoltar"><a href="#">Voltar</a></li>
            
        </ul>
    </ul>

    <!-- FIM Region Menu Despesas-->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script src="/js/Buscar.js" asp-append-version="true"></script>
    }
</body>
