@model Prospera.Models.Terceiros;
@{
    ViewData["Title"] = "Terceiros";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Evita que o usuario rotacione a tela ou aproxime para ver as informaçoes -->
    <meta name="viewport" content="width=device-width">
    <!-- link css -->
    <link rel="stylesheet" href="/css/PaginaInicial.css">
    <!-- Css Pagina Axiliares -->
    <!-- Receitas css -->
    <link rel="stylesheet" href="/css/PaginaMenus/Receitas.css">
    <!-- DespesasCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Despesas.css">
    <!-- ContaBancariaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ContaBancaria.css">
    <!-- TerceirosCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Terceiros.css">
    <!-- TerceirosConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ConsultaTerceiros.css">
    <!-- TransacaoConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Transacao.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="icon" href="/img/Favicon.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>


    <title>Prospera</title>
</head>

<body>
    <ul id="FundoMenusTerceiros">
        <ul class="Container TerceirosContainer">
            <li class="HeadMenuTerceiros">
                <h4>Cadastro de Devedor/Pagador</h4>
            </li>///">
            <li class="ImgFundoMenu"> @* <img src="~img/Terceiros/Tela-Inicial_Menu.png"> *@ </li>
            <li class="TxtInfTerceiros">
                <span>
                    <h4>ID</h4>
                    <h4>Nome</h4>
                    <h4>Email</h4>
                    <h4>Telefone</h4>
                    <h4>Telefone2</h4>
                    <h4>CEP</h4>
                    <h4>Cidade</h4>
                    <h4>Bairro</h4>
                    <h4>UF</h4>
                    <h4>Endereço</h4>
                    <h4>Observacao</h4>

                </span>
                <form asp-controller="MenuUsuario" asp-action="CadastrarTerceiro" method="post" id="TerceirosForm">
                    <input type="text" asp-for="IdTerceiros" placeholder="ID do terceiro" id="TxtTerceirosId" />
                    <span asp-validation-for="NomeTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="NomeTerceiros" placeholder="Nome completo" id="TxtTerceirosNome" maxlength="120">
                    <span asp-validation-for="EmailTerceiros" class="text-danger"></span>
                    <input type="email" asp-for="EmailTerceiros" placeholder="Email" id="TxtTerceirosEmail">
                    <span asp-validation-for="TelefoneTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="TelefoneTerceiros" placeholder="(99) 9 9999-9999" class="phone" id="TxtTerceirosTelefone" maxlength="20">
                    <span asp-validation-for="Telefone2Terceiros" class="text-danger"></span>
                    <input type="text" asp-for="Telefone2Terceiros" placeholder="(99) 9 9999-9999" class="phone" id="TxtTerceirosTelefone2">
                    <span asp-validation-for="CEPTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="CEPTerceiros" placeholder="CEP" id="TxtTerceirosCEP">
                    <span asp-validation-for="EnderecoTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="EnderecoTerceiros" placeholder="Endereco" id="TxtTerceirosEndereco">
                    <span asp-validation-for="CidadeTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="CidadeTerceiros" placeholder="Cidade" id="TxtTerceirosCidade">
                    <span asp-validation-for="BairroTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="BairroTerceiros" placeholder="Bairro" id="TxtTerceirosBairro">
                    <span asp-validation-for="UFTerceiros" class="text-danger"></span>
                    <input type="text" asp-for="UFTerceiros" placeholder="UF" id="TxtTerceirosUF">
                    <input type="text" asp-for="ObservacaoTerceiros" placeholder="Observação" id="TxtTerceirosObservacao">
                    <input type="hidden" name="IdTerceirosTemp" id="IdTerceirosTemp" />


                    <input type="hidden" name="acao" id="acao" value="cadastro" />
                    <button type="submit" name="btnAcao" value="cadastro" id="BtnTerceirosCadastrar">Cadastrar</button>
                    <button type="submit" name="btnAcao" value="exclusao" id="BtnTerceirosApagar">Excluir</button>
                    <button type="submit" name="btnAcao" value="editar" id="BtnTerceirosAlterar">Alterar</button>
                    <button id="BtnTerceirosConsultar"><a asp-controller="Terceiros" asp-action="Consulta">Consultar</a></button>
                    <h4 class="NomID">Buscar por ID</h4>

                </form>
                <button id="BtnTerceirosBuscar">Buscar</button>
                <button id="BtnTerceirosLimpar">Limpar</button>
                <button id="BtnTerceirosVoltar"><a asp-controller="Home" asp-action="MenuUsuario">Voltar</a></button>
            </li>
            <li>

                <h4>Pessoa</h4>
                <!-- Conteúdo da tela oculta aqui -->

            </li>
        </ul>
    </ul>
    @* <script src="/js/PaginaInicial.js" asp-append-version="true"></script> *@
    <script src="/js/Buscar.js" asp-append-version="true"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    }

</body>

</html>