@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link css -->
    <link rel="stylesheet" href="/css/Login_Register.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">

    <title>Document</title>
</head>

<body>
    <!-- Session NavBar -->
    <section id="NavBar">
        <div class="MenuNav">
    <li class="ImgFundoLateral">


            <ul class="Nav-Container">
                <img src="/img/Login/IconeLogin.png">
                <img src="/img/Login/Lateral.png" class="ImgLateral">
                <h2>PROSPERA</h2>
                <li><a asp-controller="Home" asp-action="Index" id="BtnInicio">INICIO</a></li>
            </ul>


            <ul class="div-central container">
                <li class="imgFund">
                    <img src="/img/Login/LoginBanner.png">
                </li>
           
                <ul class="CardInfLogin">

                    <ul class="LoginInf">

                        <h2>Olá <br> Seja bem vindo</h2>
                        @if (TempData["MensagemErro"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                                @TempData["MensagemErro"]
                            </div>
                        }
                        <form asp-controller="Login" asp-action="Entrar" method="post">
                        <li class="TxtLogin EspacoInput"><input asp-for="Email" type="text" placeholder="Email" id="TxtLogin"></li>
                            @Html.ValidationMessageFor(x => x.Email)
                        <li class="IconSenha"><img src="/img/Login/IconLogin.png"></li>
                        <li class="IconLogin"><img src="/img/Login/IconSenha.png"></li>

                        <li class="TxtSenha EspacoInput"><input type="password" asp-for="Senha" placeholder="Senha" id="TxtSenha"></li>
                            @Html.ValidationMessageFor(x => x.Senha)

                        <h4 class="CheckH4"><input type="checkbox" name="manterLogado" id="ChekManterLogado">  Manter logado?</h4>

                        <li id="BtnLogin"><a><button type="submit" id="btn-transparent" class="btn  btn-primary btn-block">LOGAR</button></li>
                        </form>

                        <!-- Btxt - Botão que na verdade esta dentro de um texto, h1 ou p... -->
                        <h4 class="BtxtInscrevase">Não tem conta? <a asp-controller="Cadastro" asp-action="Cadastro" id="BtnInscrevase">Inscreva-se</a></h4>

                        <h4 class="BtxtEsqSenha"><a href="#" id="BtnAjuda">Ajuda</a> <a href="#" id="BtnEsqSenha">Esqueceu a senha?</a></h4>


                    </ul>

                    <ul>
                    </ul>
        </div>
    </section>



    <!-- link js -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>