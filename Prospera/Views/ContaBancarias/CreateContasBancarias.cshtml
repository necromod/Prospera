@model Prospera.Models.ContaBancaria;
@{
    ViewData["Title"] = "Contas Bancarias";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Evita que o usuario rotacione a tela ou aproxime para ver as informaçoes -->
    <meta name="viewport" content="width=device-width">
    <!-- link css -->
    <link rel="stylesheet" href="/css/PaginaInicial.css">
    <!-- Css Pagina Axiliares -->
    <!-- Receitas css -->
    <link rel="stylesheet" href="/css/PaginaMenus/Receitas.css">
    <!-- DespesasCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Despesas.css">
    <!-- ContaBancariaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ContaBancaria.css">
    <!-- TerceirosCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Terceiros.css">
    <!-- TerceirosConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/ConsultaTerceiros.css">
    <!-- TransacaoConsultaCSS -->
    <link rel="stylesheet" href="/css/PaginaMenus/Transacao.css">
    <!-- Fonte inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="icon" href="/img/Favicon.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400&family=Lato:ital,wght@1,100&display=swap"
          rel="stylesheet">
</head>

<body>
    <ul id="FundoMenusContasBanc">
        <ul class="Container ContaBancContainer">
            <li class="HeadMenuContasBanc">
                <h4>Cadastro de Contas Bancarias</h4>
            </li>
            <li class="TxtInfContBanc">

                <span>
                    <h4>Banco</h4>
                    <h4>Observação</h4>
                    <h4>Numero Conta</h4>
                    <h4>Agencia</h4>
                    <h4>Tipo da Conta</h4>
                    <h4>Saldo</h4>
                    <h4 class="NomID2">ID</h4>
                </span>
                
                <form asp-controller="ContaBancarias" asp-action="CadastrarContBan" method="post">
                    <!-- Seus outros campos aqui -->
                    <input asp-for="BancoContBan" type="text" id="DropBancoCont" placeholder="Nome do banco" />
                    <span asp-validation-for="BancoContBan" class="text-danger"></span>

                    <input asp-for="ObsContBan" type="text" id="TxtContBancObservacao" name="TxtContBancObservacao" maxlength="100">
                    <span asp-validation-for="ObsContBan" class="text-danger"></span>

                    <input asp-for="NumContBan" type="number" id="TxtContBancNumero" name="TxtContBancNumero">
                    <span asp-validation-for="NumContBan" class="text-danger"></span>

                    <input asp-for="AgenciaContBan" type="number" id="TxtContBancAgencia" name="TxtContBancAgencia">
                    <span asp-validation-for="AgenciaContBan" class="text-danger"></span>

                    <input asp-for="TipoContBan" type="text" id="TtxContBancTipoConta" name="TtxContBancTipoConta" maxlength="50">
                    <span asp-validation-for="TipoContBan" class="text-danger"></span>

                    <input asp-for="SaldoContBan" type="number" id="TtxContBancSaldo" name="TtxContBancSaldo" data-val="true" data-val-currency="O campo Saldo deve ser um valor monetário válido." data-val-number="O campo Saldo deve ser um número." data-val-required="O campo Saldo é obrigatório.">
                    <span asp-validation-for="SaldoContBan" class="text-danger"></span>

                    <input asp-for="CodigoContaBanc" type="number" id="TxtContaBancBuscaId" name="TxtContaBancBuscaId" maxlength="3">
                    <span asp-validation-for="CodigoContaBanc" class="text-danger"></span>


                    <!-- Seus botões de ação aqui -->
                    <input type="hidden" name="acao" id="acao" value="Cadastro" />
                    <button type="submit" name="btnAcao" value="Cadastro" id="BtnContBancCadastrar">Cadastrar</button>
                    <button type="submit" name="btnAcao" value="Excluir" id="BtnContaBancApagar">Excluir</button>
                    <button type="submit" name="btnAcao" value="Alterar" id="BtnContaBancAlterar">Alterar</button>
                    <!-- Outros botões -->
                </form>

                <button id="BtnContBancVoltar">Voltar</button>
                <button id="BtnContBancLimpar">Limpar</button>
                <button id="BtnContaBancConsultar">Buscar</button>
                <button id="BtnContaBancLista">Consultar</button>
            </li>
            <li>
             <button id="ContBancVoltar"><a asp-controller="Home" asp-action="MenuUsuario">Voltar</a></button>
            <h4>Pessoa</h4>
            </li>
            <li id="ImgBancoSelect">
                <img src="/img/PaginaInicial/PaginaAuxiliar/ContaBanc/IconeBradesco.png" class="LgBradesco">
                <img src="/img/PaginaInicial/PaginaAuxiliar/ContaBanc/IconeInter.png" id="LgInter">
                <img src="/img/PaginaInicial/PaginaAuxiliar/ContaBanc/IconeItau.png" class="LgItau">
            </li>
        </ul>
    </ul>


    @* <script src="/js/PaginaInicial.js" asp-append-version="true"></script> *@
    <script src="/js/Buscar.js" asp-append-version="true"></script>
    <script src="/js/site.js" asp-append-version="true"></script>
