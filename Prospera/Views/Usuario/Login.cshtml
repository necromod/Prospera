@model Prospera.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutDeslogado.cshtml";
}

<h2>Login</h2>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Senha">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" name="manterLogado" id="manterLogado" />
        <label class="form-check-label" for="manterLogado">Manter-me conectado</label>
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>